</head>
<body>
    <%- include('partials/header') %>
    <div class="sidebar">
        Sidebar
    </div>
    <div class="itinerary-main">
        <div class="itinerary-detail-grid">
            <h1>Itinerary content here</h1>
            <!-- Trip content -->
        </div>
        <div id="map">
            <iframe
                style="border:0; padding-top:80px;"
                loading="lazy"
                allowfullscreen
                src="https://www.google.com/maps/embed/v1/directions?key=<%= googleAPIKey %>&origin=Archorage,Alaska&waypoints=Kenai+Fjords+National+Park&destination=Denali+National+Park,Alaska&avoid=tolls|highways"
            </iframe>
        </div>
    </div>
    <%- include('partials/login.ejs') %>
    <%- include('partials/signup.ejs') %>
</body>
</html>