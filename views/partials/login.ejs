<!-- login modal -->
<div id="loginModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Login</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form method="POST" action="/user/login" autocomplete="off">
          <!-- email address -->
          <div class="row">
            <div class="col-md-12">
            <div class="form-group">
             <label for="emailAddress">Email Address</label>
              <input type="email" class="form-control" name="emailAddress" placeholder="Enter email" required>
             </div>
            </div>
          </div>

          <!-- password -->
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" required>
              </div>
            </div>
          </div>
      </div>
    
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button id="submitLogin" type="submit" class="btn btn-primary">Login</button>
      </div>
      </form>
    </div>
  </div>
</div>








