<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Home Page</title>
    <!-- css files -->
    <link rel="stylesheet" href="style/shared/header.css">
    <link rel="stylesheet" href="style/shared/general.css">
    <link rel="stylesheet" href="style/shared/homePage.css">
    <!-- flatpickr for calendar date input -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </head>
  <body>

    <%- include('partials/header') %>

    <div class="main">
      <h1>America</h1>
      <div class="itinerary-grid">
        <div class="itinerary-preview">
          <div class="thumbnail-row">
            <img class="thumbnail-photo" src="/img/location-photos/Alaska.jpg">
            <p class="thumbnail-intro">Alaska</p>
            <div class="trip-duration">10 Days</div>
          </div>
          <div class="trip-info">
            <p>Anchorage | Kenai Fjords | Denali</p>
          </div>
        </div>

        <div class="itinerary-preview">
          <div class="thumbnail-row">
            <img class="thumbnail-photo" src="/img/location-photos/California.jpg">
            <p class="thumbnail-intro">California</p>
            <div class="trip-duration">7-10 Days</div>
          </div>
          <div class="trip-info">
            <p>SF | Monterey | LA | San Diego</p>
          </div>
        </div>
      </div> 

      <h1>Europe</h1>
      <div class="itinerary-grid">
        <div class="itinerary-preview">
          <div class="thumbnail-row">
            <img class="thumbnail-photo" src="/img/location-photos/Italy.jfif">
            <p class="thumbnail-intro">Italy</p>
            <div class="trip-duration">14 Days</div>
          </div>
          <div class="trip-info">
            <p>Rome | Sorrento | Tuscany | Cinque Terre | Venice</p>
          </div>
        </div>

        <div class="itinerary-preview">
          <div class="thumbnail-row">
            <img class="thumbnail-photo" src="/img/location-photos/Portugal.jpg">
            <p class="thumbnail-intro">Portugal</p>
            <div class="trip-duration">10 Days</div>
          </div>
          <div class="trip-info">
            <p>Lisbon | Porto | Algarve</p>
          </div>
        </div>
      </div> 

      <div id="loginModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Login</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

    </div>

      
    

    <script src="scripts/header.js"></script>
    
  </body>
</html>